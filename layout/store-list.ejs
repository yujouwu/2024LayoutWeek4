<li class="col-4 col-lg-6 col-sm-12 position-relative">
    <div class="d-flex flex-column h-100">
      <img src="../assets/images/<%= storeImg %>.png" alt="<%= storeName %> 照片">
      <h3 class="fs-5 border-gray py-2 px-6"><%= storeName %></h3>
      <address class="border-gray py-4 px-6 d-flex flex-column gap-2 fs-4">
        <div class="d-flex align-items-center">
          <span class="material-symbols-outlined me-2">call</span>電話：<%= storeTel %>
        </div>
        <div class="d-flex align-items-center">
          <span class="material-symbols-outlined me-2">schedule</span>營業時間：<%= storeTime %>
        </div>
        <div class="d-flex">
          <span class="material-symbols-outlined me-2">location_on</span>地址：<%= storeAddr %>
        </div>
      </address>
      <a href="<%= storeHref %>" class="btn btn-lg btn-dark w-100 text-center">詳細資訊</a>
    </div>
</li>